---
// src/components/ResultsDisplay.astro
---

<div id="error-container" class="error-message"></div>

<div id="results-container">
  <hr class="results-divider" />
  <h3 class="results-title">生成结果</h3>
  <div id="results-list"></div>
</div>

<style is:global>
  /* Results Area */
  #results-container {
    margin-top: 2rem;
    display: none;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  #results-container.visible {
    display: block;
    opacity: 1;
  }

  .results-divider {
    border: 0;
    border-top: 1px solid var(--border-color);
    margin: 2rem 0 1.5rem 0;
  }

  .results-title {
    margin-bottom: 1.25rem;
    font-size: 1.1rem;
    color: #cbd5e1;
    font-weight: 500;
  }

  .result-card {
    background: rgba(30, 41, 59, 0.4);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.25rem;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
    animation: slideIn 0.4s ease-out forwards;
    opacity: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .result-card:hover {
    background: rgba(30, 41, 59, 0.8);
    border-color: rgba(99, 102, 241, 0.3);
    transform: translateX(4px);
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .result-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .result-name {
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .status-badge {
    font-size: 0.75rem;
    padding: 0.3rem 0.6rem;
    border-radius: 20px;
    font-weight: 600;
  }

  .status-pass {
    background: rgba(16, 185, 129, 0.15);
    color: #34d399;
    border: 1px solid rgba(16, 185, 129, 0.2);
  }

  .status-fail {
    background: rgba(239, 68, 68, 0.15);
    color: #f87171;
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  .result-reason {
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .action-container {
    margin-top: 0.25rem;
    display: flex;
    justify-content: flex-end;
  }

  .action-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: #e2e8f0;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .action-link:hover {
    background: var(--primary);
    border-color: var(--primary);
    color: white;
  }

  .error-message {
    color: #fca5a5;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    padding: 1rem;
    border-radius: 10px;
    margin-top: 1rem;
    display: none;
    font-size: 0.95rem;
    text-align: center;
  }
</style>
